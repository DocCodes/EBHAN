VERBOSE 1
DEF NAME AS INPUT "ORDER NAME: "
STRING:TITLE %{NAME}
STRING:REVERSE %{NAME}
DEF AMT AS INPUT "ORDER SIZE: "
DEF PRICE AS 0.96
DEF TOT AS (%{PRICE}*%{AMT})
INTEGER:FIGURE %{TOT} 2
DEF DOZ AS (%{AMT}/12)
INTEGER:FLOOR %{DOZ}

PRINT "%{NAME}'s order"
PRINT "---------------"
PRINT "%{AMT} cupcakes(s)"
PRINT "%{DOZ} dozen"
PRINT "%{AMT}*%{PRICE}"
PRINT %{TOT}
PRINT "LOOPING\n"

FOR <0,%{AMT}> DO
   DEF PRI AS (%{ITER}+1)
   PRINT "CUPCAKE %{PRI}/%{AMT}"
ENDFOR
